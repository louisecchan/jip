<!DOCTYPE html>
<html class="mpanjuh idc0_350" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
        
    <!-- Big Cartel generated meta tags -->
    <meta name="generator" content="Big Cartel" />
    <meta name="author" content="fieur" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta name="theme_name" content="Cosmos" />
    <meta name="theme_version" content="1.3.0" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="fieur" />
    <meta property="og:title" content="fieur" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
        
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com/" />
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="true" />

    <!-- Favicons -->
    <link rel="icon" href="https://fieur.bigcartel.com/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="https://fieur.bigcartel.com/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="https://fieur.bigcartel.com/apple-touch-icon.png" />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": canonicalUrl
        }
      ]
    })}></script>
    
    <script type="application/ld+json" set:html={JSON.stringify([
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "fieur",
        "description": description,
        "url": canonicalUrl,
        "potentialAction": {
          "@type": "SearchAction",
          "target": {
            "@type": "EntryPoint",
            "urlTemplate": "https://www.fieur-candles.com/products?search={search_term_string}"
          },
          "query-input": "required name=search_term_string"
        }
      },
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "fieur",
        "description": description,
        "url": canonicalUrl,
        "sameAs": ["https://www.instagram.com/_fieur/"]
      }
    ])}></script>
    
    <!-- Big Cartel Configuration -->
    <script set:html={`
      window.bigcartel = window.bigcartel || {};
      window.bigcartel = {
        ...window.bigcartel,
        ...${JSON.stringify(bigCartelConfig)}
      };
    `}></script>
    
    <!-- External Scripts -->
    <script id="stripe-js" src="../scripts/Untitled.js" async></script>
    <script async src="../scripts/google-analytics_analytics.js"></script>
    <script src="../scripts/prompt.js"></script>
    <script id="simplify-jobs-page-script" src="../scripts/pageScript.bundle.js"></script>
  </head>
  
  <body id="home" class="theme">
    <!-- Main Tagline with Smooth Transition -->
    <a href="./products.html" class="tagline-redirect" id="smooth-transition">
      <span id="tagline" class="special-elite-regular">light and see.</span>
      <span class="typed-cursor typed-cursor--blink" aria-hidden="true">|</span>
    </a>
    
    <!-- Typed.js Library -->
    <script src="./typed.umd.js"></script>
    
    <!-- Typed.js Configuration -->
    <script set:html={`
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof Typed !== 'undefined') {
          var typed = new Typed("#tagline", {
            strings: ["<i>Candle</i>&nbsp;the goodness.", "light and see."],
            typeSpeed: 50,
            loop: true,
            backSpeed: 30,
            backDelay: 2000,
            showCursor: true,
            cursorChar: "|"
          });
        } else {
          console.error('Typed.js library not loaded');
        }
      });
    `}></script>
    
    <!-- Smooth Transition Script -->
    <script set:html={`
      document.getElementById("smooth-transition").addEventListener("click", function (event) {
        event.preventDefault();
        document.body.style.transition = "opacity 0.5s";
        document.body.style.opacity = 0;
        setTimeout(function () {
          window.location.href = "/products";
        }, 500);
      });
    `}></script>
    
    <!-- Typed.js Cursor Styles -->
    <style data-typed-js-cursor-css="true">
      .typed-cursor {
        opacity: 1;
      }
      .typed-cursor.typed-cursor--blink {
        animation: typedjsBlink 0.7s infinite;
        -webkit-animation: typedjsBlink 0.7s infinite;
      }
      @keyframes typedjsBlink {
        50% {
          opacity: 0;
        }
      }
      @-webkit-keyframes typedjsBlink {
        0% {
          opacity: 1;
        }
        50% {
          opacity: 0;
        }
        100% {
          opacity: 1;
        }
      }
    </style>
  </body>
</html>
