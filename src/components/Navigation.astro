---
// Navigation component for the menu bar
---

<nav class="navigation">
  <div class="nav-container">
    <div class="nav-menu">
      <a href="/products" class="nav-link">products</a>
      <a href="/about" class="nav-link">about</a>
      <a href="/before-buying" class="nav-link">before buying</a>
      <a href="/contact" class="nav-link">contact</a>
    </div>
    <div class="nav-right">
      <a href="/cart" class="cart-icon" aria-label="Shopping Cart">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 18C5.9 18 5.01 18.9 5.01 20S5.9 22 7 22 8.99 21.1 8.99 20 8.1 18 7 18ZM1 2V4H3L6.6 11.59L5.25 14.04C5.09 14.32 5 14.65 5 15C5 16.1 5.9 17 7 17H19V15H7.42C7.28 15 7.17 14.89 7.17 14.75L7.2 14.63L8.1 13H15.55C16.3 13 16.96 12.59 17.3 11.97L20.88 5H5.21L4.27 3H1V2ZM17 18C15.9 18 15.01 18.9 15.01 20S15.9 22 17 22 18.99 21.1 18.99 20 18.1 18 17 18Z" fill="currentColor"/>
        </svg>
        <span class="cart-count">0</span>
      </a>
      <div class="nav-toggle">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>
</nav>

<style>
  .navigation {
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: 0;
  }

  .nav-container {
    max-width: 1200px;
    margin: 0 auto 54px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
  }

  .nav-logo a {
    font-family: "Cormorant", serif;
    font-size: 1.8rem;
    font-weight: 700;
    color: #4E4E4E;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-logo a:hover {
    color: #B77F92;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    font-family: 'Cormorant', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: #4E4E4E;
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
    line-height: 20px;
    border-bottom: 2px solid transparent;
  }

  .nav-link:hover {
    color: #B77F92;
    text-underline-offset: 3px;
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: #B77F92;
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .cart-icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #4E4E4E;
    text-decoration: none;
    transition: color 0.3s ease;
    padding: 0.5rem;
    border-radius: 50%;
  }

  .cart-icon:hover {
    color: #B77F92;
    background-color: rgba(183, 127, 146, 0.1);
  }

  .cart-count {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: #B77F92;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: 600;
    min-width: 20px;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
    gap: 4px;
  }

  .nav-toggle span {
    width: 25px;
    height: 3px;
    background: #4E4E4E;
    transition: all 0.3s ease;
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .nav-container {
      padding: 1rem;
    }

    .nav-menu {
      position: fixed;
      top: 70px;
      left: -100%;
      width: 100%;
      height: calc(100vh - 70px);
      background: rgba(255, 255, 255, 0.98);
      backdrop-filter: blur(10px);
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding-top: 2rem;
      gap: 2rem;
      transition: left 0.3s ease;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-right {
      gap: 0.5rem;
    }

    .cart-icon {
      padding: 0.25rem;
    }

    .cart-count {
      width: 18px;
      height: 18px;
      font-size: 11px;
      min-width: 18px;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .nav-toggle.active span:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }
</style>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', function() {
        navToggle.classList.toggle('active');
        navMenu.classList.toggle('active');
      });

      // Close menu when clicking on a link
      const navLinks = document.querySelectorAll('.nav-link');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          navToggle.classList.remove('active');
          navMenu.classList.remove('active');
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        const target = event.target as Node;
        if (!navToggle.contains(target) && !navMenu.contains(target)) {
          navToggle.classList.remove('active');
          navMenu.classList.remove('active');
        }
      });
    }
  });
</script>
