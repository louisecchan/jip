---
import Layout from '../layouts/Layout.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Delivery information for Fieur Candles" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Special+Elite&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>Delivery - Fieur Candles</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<Layout>
  <div class="delivery-container">
    <div class="delivery-hero fade-in">
      <h1 class="delivery-title">Delivery</h1>
    </div>

    <div class="delivery-content fade-in-delayed">
      <div class="delivery-section">
        <h2>Local delivery</h2>
        <p>
            SF Express
            <br>Pay on delivery
        </p>
      </div>

      <div class="delivery-section">
        <h2>International delivery</h2>
        <p>
            Hong Kong Post Registered Mail
            <br>Starting from US 10 
            <br>(price depends on weight)
        </p>  
      </div>
    </div>
  </div>
</Layout>

<style>
  .delivery-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem 2rem;
    min-height: calc(100vh - 100px);
    --side-padding: 40px;
  }

  .fade-in {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .fade-in-delayed {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease-out 0.3s forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .delivery-hero {
    text-align: center;
    padding: 3rem 0;
  }

  .delivery-title {
    font-family: "Cormorant", serif;
    font-size: 2rem;
    font-weight: 700;
    color: #4E4E4E;
    margin-bottom: 32px;
  }

  .delivery-subtitle {
    font-family: 'Special Elite', sans-serif;
    font-size: 16px;
    line-height: 24px;
    color: #B77F92;
  }

  .delivery-content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    text-align: center;
  }

  .delivery-section h2 {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 24px;
    font-weight: 600;
    color: #4E4E4E;
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .delivery-section p {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 24px;
    color: #4E4E4E;
    margin-bottom: 1rem;
  }

  .delivery-list {
    list-style: none;
    padding: 0;
  }

  .delivery-list li {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 24px;
    color: #4E4E4E;
    margin-bottom: 0.5rem;
    padding-left: 2rem;
    position: relative;
  }

  .delivery-list li::before {
    content: "âœ¦";
    position: absolute;
    left: 0;
    color: #B77F92;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .delivery-container {
      padding: 1rem;
    }

    .delivery-title {
      font-size: 1.5rem;
    }

    .delivery-subtitle {
      font-size: 1rem;
    }

    .delivery-section h2 {
      font-size: 1.5rem;
    }

    .delivery-section p,
    .delivery-list li {
      font-size: 1rem;
    }
  }
</style>
