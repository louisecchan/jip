---
import Layout from '../../layouts/Layout.astro';
import { getStripeProductById } from '../../lib/stripe';

export async function getStaticPaths() {
  // This will be populated at build time with all product IDs
  // For now, we'll handle dynamic routing
  return [];
}

const { id } = Astro.params;

if (!id) {
  throw new Error('Product ID is required');
}

// Fetch the specific product
const product = await getStripeProductById(id);

if (!product) {
  throw new Error('Product not found');
}
---

<Layout>
  <div class="product-detail-container">
    <div class="product-detail">
      <div class="product-image-section">
        <img src={product.image} alt={product.name} class="product-main-image" />
      </div>
      
      <div class="product-info-section">
        <div class="product-category">{product.categories.join(', ')}</div>
        <h1 class="product-title">{product.name}</h1>
        <div class="product-price">${product.price.toFixed(2)}</div>
        <div class="product-description">
          {product.description}
        </div>
        
        <div class="product-actions">
          <button class="back-button" onclick="window.history.back()">
            ‚Üê Back to Products
          </button>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .product-detail-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .product-detail {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: start;
  }

  .product-image-section {
    position: sticky;
    top: 2rem;
  }

  .product-main-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 15px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .product-info-section {
    padding: 1rem 0;
  }

  .product-category {
    color: #B77F92;
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  .product-title {
    font-size: 2.5rem;
    color: #4E4E4E;
    font-family: "Cormorant", sans-serif;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .product-price {
    font-size: 2rem;
    color: #4E4E4E;
    font-family: "Helvetica Neue", sans-serif;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .product-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #666;
    margin-bottom: 2rem;
    font-family: "Helvetica Neue", sans-serif;
  }

  .product-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .back-button {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 2px solid #B77F92;
    color: #B77F92;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    font-family: "Helvetica Neue", sans-serif;
  }

  .back-button:hover {
    background: #B77F92;
    color: white;
  }

  @media (max-width: 768px) {
    .product-detail-container {
      padding: 1rem;
    }

    .product-detail {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .product-image-section {
      position: static;
    }

    .product-main-image {
      height: 300px;
    }

    .product-title {
      font-size: 2rem;
    }

    .product-price {
      font-size: 1.5rem;
    }
  }
</style>
