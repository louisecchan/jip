---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="contact-container">
    <div class="contact-form-container">
      <h2>Contact</h2>
      <form class="contact-form" id="contactForm">
        <div class="form-group">
          <label for="name">name</label>
          <input type="text" id="name" name="name" required />
        </div>

        <div class="form-group">
          <label for="email">email</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="form-group">
          <label for="subject">subject</label>
          <input type="text" id="subject" name="subject" />
        </div>

        <div class="form-group">
          <label for="message">message</label>
          <textarea id="message" name="message" rows="5" required></textarea>
        </div>

        <button type="submit" class="submit-btn">send message</button>
      </form>
    </div>
  </div>
</Layout>

<style>
  .contact-container {
    max-width: 800px;
    width: 100%;
    margin: 0 auto;
    padding: 3rem;
    padding-bottom: 4rem;
  }

  .contact-hero {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 0;
  }

  .contact-title {
    font-family: "Cormorant", serif;
    font-size: 3rem;
    font-weight: 700;
    color: #4e4e4e;
    margin-bottom: 1rem;
  }

  .contact-subtitle {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.2rem;
    color: #b77f92;
    font-style: italic;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .contact-form-container {
    --side-padding: 40px;
    margin: 0 auto;
    max-width: calc(1080px + calc(var(--side-padding) * 2));
    padding: 0 var(--side-padding);
  }

  .contact-info h2,
  .contact-form-container h2 {
    font-family: "Cormorant", serif;
    font-size: 2rem;
    font-weight: 600;
    color: #4e4e4e;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    text-align: center;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .contact-item h3 {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: #b77f92;
    margin-bottom: 0.5rem;
  }

  .contact-item p {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #4e4e4e;
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    width: 100%;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    padding: 0 var(--side-padding);
  }

  .form-group label {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 700;
    color: #4e4e4e;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group textarea {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1rem;
    padding: 0.75rem;
    border: 1px solid #4e4e4e;
    border-radius: 8px;
    transition: border-color 0.3s ease;
    width: 100%;
    box-sizing: border-box;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #b77f92;
  }

  .submit-btn {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1rem;
    font-weight: 500;
    color: white;
    background: #b77f92;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: center;
  }

  .submit-btn:hover {
    background: #a06b7a;
  }

  .faq-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid #e0e0e0;
  }

  .faq-section h2 {
    font-family: "Cormorant", serif;
    font-size: 2rem;
    font-weight: 600;
    color: #4e4e4e;
    margin-bottom: 2rem;
    text-align: center;
  }

  .faq-item {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f9f9f9;
    border-radius: 8px;
  }

  .faq-item h3 {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: #b77f92;
    margin-bottom: 1rem;
  }

  .faq-item p {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: #4e4e4e;
  }

  @media (max-width: 768px) {
    .contact-container {
      padding: 1rem;
    }

    .contact-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .contact-title {
      font-size: 2.5rem;
    }

    .contact-subtitle {
      font-size: 1rem;
    }

    .contact-info h2,
    .contact-form-container h2,
    .faq-section h2 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const contactForm = document.getElementById("contactForm");

    if (contactForm) {
      contactForm.addEventListener("submit", function (e) {
        e.preventDefault();

        // Get form data
        const formData = new FormData(contactForm);
        const name = formData.get("name");
        const email = formData.get("email");
        const subject = formData.get("subject");
        const message = formData.get("message");

        // Simple validation
        if (!name || !email || !message) {
          alert("Please fill in all required fields.");
          return;
        }

        // Simulate form submission
        alert("Thank you for your message! We'll get back to you soon.");
        contactForm.reset();
      });
    }
  });
</script>
